@model BikeExchange.Models.ViewModels.ModelViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Edit Model of Vehicle</h2>
<form method="post" action="Edit">

    @* Note:
        
        To capture the Model.Id of the Model being edited, 
        so that when post "back", we have the Id; otherwise, 
        EF thinks we are creating a new Entity in the DB
    *@
    <input hidden asp-for="Model.Id" /> 

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Makes"></label>
        </div>

        <div class="col-4">
            <select asp-for="Model.MakeFK" asp-items="Model.MakeList(Model.Makes)" class="form-control"></select>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Model.Name"></label>
        </div>
        <div class="col-4">
            <input asp-for="Model.Name" class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Update" />
        <a asp-action="Index" class="btn btn-success">Cancel</a>
    </div>
</form>


